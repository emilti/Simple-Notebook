<div class="Absolute-Center is-Responsive">
<form id="form-sign-in">
    <input type="text" class="form-control" id="tb-login-username" name="username" placeholder="Account name"
           required/>
    <input type="password" class="form-control" id="tb-login-password" name="password" placeholder="Password"
           required/>
    <button class="btn btn-lg btn-success form-control" id="btn-login" type="submit">Log In</button>
    <h3 class="text-center sign-up form-login-heading"><b>Not registered?</b></h3>
    <button class="btn btn-lg btn-primary form-control" id="btn-go-to-register-button">Not Registered. Register here!</button>
</form>

</div>
